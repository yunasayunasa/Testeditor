{
  "initialState": "Title",
  "states": {

    "Title": {
      "onEnter": [ { "action": "transitionTo", "params": { "scene": "TitleScene" } } ],
      "transitions": [
       
        { 
          "event": "START_GAME", 
          "to": "InGame",
          "action": { 
            "type": "transitionTo", 
            "params": { "scene": "GameScene", "scenario": "test" }
          }
        }
      ]
    },

    "InGame": {
      "comment": "InGame状態自体は、onEnterで何もしない。ただ『プレイ中』であることを示すだけ",
      "onEnter": [], 
      "transitions": [
        { "event": "OPEN_PAUSE_MENU", "to": "Paused" }
      ]
    },

    "Paused": {
      "onEnter": [
        { "action": "pauseScene" } 
      ],
      "onExit": [
        { "action": "resumeScene" } 
      ],
      "transitions": [
        { "event": "CLOSE_PAUSE_MENU", "to": "InGame" }
      ]
    },

    "GameOver": {
      "comment": "ゲームオーバー画面が表示されている状態。",
      "onEnter": [
        {
          "action": "transitionTo",
          "params": {
            "scene": "GameOverScene"
          }
        }
      ],
      "transitions": [
        { "event": "RESTART_GAME", "to": "InGame" },
        { "event": "RETURN_TO_TITLE", "to": "Title" }
      ]
    }
  }
}