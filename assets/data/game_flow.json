{
  "initialState": "Title",
  "states": {
    "Title": {
      "comment": "タイトル画面の状態",
      "onEnter": [
        {
          "type": "run_scene",
          "params": { "sceneKey": "GameScene" }
        }
      ],
      "transitions": [
        { "event": "start_game", "to": "Gameplay" }
      ]
    },
    "Gameplay": {
      "comment": "メインのゲームプレイ状態",
      "onEnter": [],
      "onExit": [],
      "transitions": [
        { "event": "open_main_menu", "to": "MainMenu" }
      ]
    },
    "MainMenu": {
      "comment": "ポーズメニューが開いている状態",
      "onEnter": [],
      "onExit": [],
      "transitions": [
        { "event": "close_menu", "to": "Gameplay" }
      ]
    }
  }
}